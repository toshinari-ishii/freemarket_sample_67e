          %p アプリをお持ちでない方は以下より
          %p インストールしてご利用いただけます
          .buy__third--address--image1
            %a{:href => "#"}
              = image_tag "app-store", alt: "アップルリンク画像"
            %a{:href => "#"}
              = image_tag "google-play", alt: "グーグルリンク画像"    
      .foot
        .foot__link
          %tr=link_to "プライバシーポリシー", url:'#'
          %tr=link_to "フリマ利用規約", url:'#'
          %tr=link_to "特定商取引に関する表記", url:'#'
        .foot__icon
          = image_tag "logo-white", size: "260x75", alt: "商品画像"
        .foot__copy
          %p.foot__copy--mini Furima,inc.


    
      