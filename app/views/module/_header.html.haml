.header
  .header__main
    .header__main__top
      .header__main__top__logo
        = link_to image_tag("logo.png", width:"140px"), '/'
      .header__main__top__form
        = form_tag("hoge", method: :get) do
          .header__main__top__form__box
            = text_field_tag :hoge, "", {placeholder: "キーワードから探す",class:"header__main__top__form__box__text"}
            = image_submit_tag "icon-search 1.png",class:"header__main__top__form__box__submit",width:"30px"
    .header__main__bottom
      .header__main__bottom__left
        .header__main__bottom__left__cate
          = link_to "カテゴリー", new_category_path, class: "rootCategory"
          .parent_list
            
        .header__main__bottom__left__brand
          = link_to "ブランド"
      .header__main__bottom__right
        - if user_signed_in?
          .header__main__bottom__right__logout
            = link_to "ログアウト",destroy_user_session_path
          .header__main__bottom__right__mypage
            = link_to "#{current_user.last_name+current_user.first_name}のページ",user_path(current_user.id)
        - else
          .header__main__bottom__right__login
            = link_to "ログイン",new_user_session_path
          .header__main__bottom__right__new
            = link_to "新規会員登録", new_user_registration_path